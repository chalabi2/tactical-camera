{
  "name": "tactical-console",
  "version": "1.0.0",
  "description": "Self-contained tactical console for ESP32-S3 CAM deployment",
  "type": "module",
  "scripts": {
    "build:frontend": "bun run build.ts frontend",
    "build:backend": "bun run build.ts backend",
    "build:static": "bun run build.ts static",
    "build:esp32": "bun run build.ts && bun run scripts/generate-esp32-assets.ts",
    "build": "bun run build.ts",
    "dev": "bun run --watch src/server/index.ts",
    "start": "bun build/index.js",
    "preview": "bun run build && bun run start",
    "test": "bun test",
    "test:api": "bun test tests/api.test.ts",
    "test:build": "bun test tests/build.test.ts",
    "test:esp32": "bun test tests/esp32.test.ts"
  },
  "dependencies": {
    "svelte": "^4.2.8"
  },
  "devDependencies": {
    "@types/bun": "latest"
  }
}
